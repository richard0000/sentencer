<!-- Shows list of Sentences -->
<ul id = "sentences">
   <% @sentences.each do |c| %>
   <li><%= link_to c.name, :action => "show_sentences", :id => c.id %></li>
   <% end %>
</ul><% if @sentences.blank? %>
<p>There are not any Sentences currently in the system.</p>
<% else %>
<p>These are the current Sentences in our system</p><ul id = "sentences">
   <% @sentences.each do |c| %>
   <li>
   <%= link_to c.text, {:action => 'show', :id => c.id} -%>
   <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
</li>
   <% end %>
</ul><% end %>
<p><%= link_to "Add new Sentence", {:action => 'new' }%></p>
<!-- Shows list of Entity Types and Categories -->
<ul id = "entity_types">
   <% @entity_types.each do |c| %>
   <li><%= link_to c.name, :action => "show_entity_types", :id => c.id %></li>
   <% end %>
</ul><% if @entity_types.blank? %>
<p>There are not any Entity Types currently in the system.</p>
<% else %>
<p>These are the current Entity Types in our system</p><ul id = "entity_types">
   <% @entity_types.each do |c| %>
   <li>
   <%= link_to c.name, {:action => 'show', :id => c.id} -%>
   <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
</li>
   <% end %>
</ul><% end %>
<p><%= link_to "Add new Entity Type", {:action => 'new' }%></p>